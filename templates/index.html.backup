            <!-- FLOATING CHATBOT (Gemini Powered) -->
            <button class="chat-btn" onclick="toggleChat()">
              <i class="bi bi-chat-dots fs-4"></i>
            </button>

            <div id="chatWindow">
              <div class="chat-header">MediCynth AI Consultant</div>
              <div class="chat-body" id="chatBody">
                <div class="msg bot-msg">Hello! I'm powered by Google Gemini AI. How can I help with your skin today?
                </div>
              </div>
              <div class="chat-input">
                <input type="text" id="userInput" placeholder="Ask about skin concerns..."
                  onkeypress="if(event.key==='Enter') sendMessage()">
                <button onclick="sendMessage()">Send</button>
              </div>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

            <script>
              // Chat Functions
              function toggleChat() {
                const win = document.getElementById("chatWindow");
                win.style.display = (win.style.display === "flex") ? "none" : "flex";
              }

              function addMessage(text, sender) {
                const body = document.getElementById("chatBody");
                const div = document.createElement("div");
                div.className = `msg ${sender}-msg`;
                div.innerHTML = text;
                body.appendChild(div);
                body.scrollTop = body.scrollHeight;
              }

              async function sendMessage() {
                const input = document.getElementById("userInput");
                const text = input.value.trim();
                if (!text) return;

                addMessage(text, "user");
                input.value = "";

                const typing = document.createElement("div");
                typing.className = "msg bot-msg typing";
                typing.textContent = "MediCynth is typing...";
                document.getElementById("chatBody").appendChild(typing);

                // Note: For a real production app, you should route this through your backend too
                // to hide the API key, but for now we'll keep the client-side chat as is
                // or update it to use a backend endpoint if you prefer.
                // Since the user asked to fix the *upload* flow specifically, I will leave the chat
                // as a client-side feature for now but using the key from the backend would be better.
                // However, I don't have a chat endpoint in run.py yet.
                // I'll stick to the existing chat logic but with the key from a variable if needed,
                // or just hardcode it as it was for now to minimize scope creep, 
                // as the user focused on the upload/prediction part.

                const GEMINI_API_KEY = "AIzaSyBJjVZ3US7q5hisidC3ToedcDx6gcfoFi4"; // Keeping existing key for chat

                try {
                  const response = await fetch(`https://generativelanguage.googleapis.com/v1/models/gemini-2.0-flash:generateContent?key=${GEMINI_API_KEY}`, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({
                      contents: [{ parts: [{ text: `You are MediCynth AI dermatology assistant. Answer warmly and professionally. Always remind to consult a doctor. Question: ${text}` }] }]
                    })
                  });

                  const data = await response.json();
                  typing.remove();
                  const reply = data.candidates[0].content.parts[0].text
                    .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                    .replace(/\n/g, '<br>');
                  addMessage(reply, "bot");
                } catch (err) {
                  typing.remove();
                  addMessage("Sorry, connection issue. Try again.", "bot");
                }
              }
            </script>

